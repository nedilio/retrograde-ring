---
import LinkButton from "./LinkButton.astro";
---

<header>
  <div class="text-center mb-4">
    <h1 class="text-5xl">SpaceX Launches 🚀</h1>
    <p class="font-light text-gray-400 mt-4">The last launches of SpaceX</p>
  </div>
  <nav
    class="flex flex-col lg:flex-row gap-2 items-center justify-between py-2"
  >
    <LinkButton href="/">
      <svg
        class="icon icon-tabler icon-tabler-rocket"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path
          d="M4 13a8 8 0 0 1 7 7a6 6 0 0 0 3 -5a9 9 0 0 0 6 -8a3 3 0 0 0 -3 -3a9 9 0 0 0 -8 6a6 6 0 0 0 -5 3"
        ></path>
        <path d="M7 14a6 6 0 0 0 -3 6a6 6 0 0 0 6 -3"></path>
        <path d="M15 9m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
      </svg>Recent launches
    </LinkButton>
    <LinkButton href="/about">
      <svg
        class="icon icon-tabler icon-tabler-file-description"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
        <path
          d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"
        ></path>
        <path d="M9 17h6"></path>
        <path d="M9 13h6"></path>
      </svg>About
    </LinkButton>
  </nav>
</header>
